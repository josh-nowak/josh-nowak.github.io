  github: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>`,
  bluesky: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="-20 -50 608 601" fill="none" stroke="currentColor" stroke-width="40" stroke-linecap="round" stroke-linejoin="round"><path d="M123.121 33.6637C188.241 82.5526 258.281 181.681 284 234.873C309.719 181.681 379.759 82.5526 444.879 33.6637C491.866 -1.61183 568 -28.9064 568 57.9464C568 75.2916 558.055 203.659 552.222 224.501C531.947 296.954 458.067 315.434 392.347 304.249C507.222 323.8 536.444 388.56 473.333 453.32C353.473 576.312 301.061 422.461 287.631 383.039C285.169 375.812 284.017 372.089 284 375.007C283.983 372.089 282.831 375.812 280.369 383.039C266.939 422.461 214.527 576.312 94.6667 453.32C31.5556 388.56 60.7778 323.8 175.653 304.249C109.933 315.434 36.0535 296.954 15.7778 224.501C9.94525 203.659 0 75.2916 0 57.9464C0 -28.9064 76.1345 -1.61183 123.121 33.6637Z"></path></svg>`,
  email: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>`,
};

const socialLabels: Record<string, string> = {
  linkedin: "LinkedIn",
  github: "Github",
  bluesky: "Bluesky",
  email: "hello@joshuanowak.eu",
};
---

<footer class="animate">
  <Container>
    <div class="relative">
      <div class="absolute right-0 -top-20">
        <BackToTop />
      </div>
    </div>
    <div class="flex flex-col gap-6">
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={`mailto:${SITE.EMAIL}`}
          aria-label="Email"
          class="text-black/60 dark:text-white/60 hover:text-black dark:hover:text-white transition-colors"
        >
          <Fragment set:html={socialIcons.email} />
        </a>
        {
          SOCIALS.map((social) => (
            <a
              href={social.HREF}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.NAME}
              class="text-black/60 dark:text-white/60 hover:text-black dark:hover:text-white transition-colors"
            >
              <Fragment set:html={socialIcons[social.NAME.toLowerCase()]} />
            </a>
          ))
        }
      </div>
      <div class="text-center text-black/50 dark:text-white/50 text-sm">
        &copy; {currentYear}
        {SITE.NAME}
      </div>
    </div>
  </Container>
</footer>
