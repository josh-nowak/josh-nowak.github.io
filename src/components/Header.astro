---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";

import homeIcon from "pixelarticons/svg/home.svg?raw";
import notesIcon from "pixelarticons/svg/notes.svg?raw";
import sunIcon from "pixelarticons/svg/sun-alt.svg?raw";
import moonIcon from "pixelarticons/svg/moon.svg?raw";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between items-center">
      <Link
        href="/"
        underline={false}
        class="text-black dark:text-white text-xl flex items-center md:gap-2"
        style="font-family: 'Silkscreen', monospace;"
      >
        Joshua Nowak
      </Link>
      <nav class="flex items-center">
        <Link
          href="/"
          underline={false}
          aria-label="Home"
          class="group flex items-center md:gap-2 p-2 rounded-lg text-black/60 dark:text-white/60 hover:text-black dark:hover:text-white hover:bg-black/5 dark:hover:bg-white/10 transition-all [&>svg]:w-6 [&>svg]:h-6"
        >
          <Fragment set:html={homeIcon} />
          <span
            class="text-sm max-w-0 overflow-hidden md:group-hover:max-w-20 transition-all duration-300 whitespace-nowrap"
            style="font-family: 'Silkscreen', monospace;">Home</span
          >
        </Link>
        <Link
          href="/notes"
          underline={false}
          aria-label="Notes"
          class="group flex items-center md:gap-2 p-2 rounded-lg text-black/60 dark:text-white/60 hover:text-black dark:hover:text-white hover:bg-black/5 dark:hover:bg-white/10 transition-all [&>svg]:w-6 [&>svg]:h-6"
        >
          <Fragment set:html={notesIcon} />
          <span
            class="text-sm max-w-0 overflow-hidden md:group-hover:max-w-20 transition-all duration-300 whitespace-nowrap"
            style="font-family: 'Silkscreen', monospace;">Notes</span
          >
        </Link>
        <button
          id="theme-toggle"
          aria-label="Toggle theme"
          class="group flex items-center md:gap-2 p-2 rounded-lg text-black/60 dark:text-white/60 hover:text-black dark:hover:text-white hover:bg-black/5 dark:hover:bg-white/10 transition-all [&_svg]:w-6 [&_svg]:h-6"
        >
          <span id="sun-icon" class="hidden dark:block">
            <Fragment set:html={sunIcon} />
          </span>
          <span id="moon-icon" class="block dark:hidden">
            <Fragment set:html={moonIcon} />
          </span>
          <span
            class="text-sm max-w-0 overflow-hidden md:group-hover:max-w-20 transition-all duration-300 whitespace-nowrap"
            style="font-family: 'Silkscreen', monospace;">Theme</span
          >
        </button>
      </nav>
    </div>
  </Container>
</header>
